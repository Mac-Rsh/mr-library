menu "ADC driver configure"
    # Use ADC
    if MR_USE_ADC
        # ADC1
        config MR_USE_ADC1
            bool "Use ADC1 driver"
            default n
    
        # ADC2
        config MR_USE_ADC2
            bool "Use ADC2 driver"
            default n

    # Unused adc prompt
    if !MR_USE_ADC
        comment "Please enable adc device first"
    endif
endmenu
