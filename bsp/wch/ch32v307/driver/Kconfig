menu "Driver configure"

    menu "ADC"
        config MR_USING_ADC1
            bool "Enable ADC1 driver"
            default n

        config MR_USING_ADC2
            bool "Enable ADC2 driver"
            default n
    endmenu

    menu "DAC"
